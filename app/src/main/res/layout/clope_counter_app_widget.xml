<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/widget_margin" android:background="#CCC">

    <TextView android:id="@+id/appwidget_nbclopes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        />
    <TextView android:id="@+id/appwidget_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/appwidget_nbclopes"
        android:text="@string/widget_separator"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    <TextView android:id="@+id/appwidget_avg7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/appwidget_separator"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        />

    <Button android:id="@+id/appwidget_addclope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_button"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>